
@using AgileDevelopmentPlatform.ViewModel
@model ProjectAccessViewModel

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/lib");
}
 TODO: Java script functionality for table is enable only after an the popup appears

<h2>AccessManagement</h2>
<h2>@Model.ProjectName user access</h2>
<div class="row">
    <div class=" col-md-10"></div>
    <div class=" col-md-2"><button class="button btn-success hover" onclick="AddNewUser()">Add user</button></div>

</div>
@if (@Model.GrantedAccessList.Any())
{

    <table id="UserAccessTable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>User</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserSelectViewModel user in Model.GrantedAccessList)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td> <button data-user-id="@user.Id" class="btn-danger" onclick="RemoveUser(this)">Remove</button></td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <p>No users have been added to the project yet!</p>
}

<div class="modal fade" id="modal">
    <div class="modal-dialog">
        <div class="modal-content" id="newTaskCreationBody">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3>New task</h3>
            </div>
            <div class="modal-body">

            </div>

        </div>
    </div>
</div>

<script>

    function AddNewUser() {

        $("#newTaskCreationBody").load('@Url.Action("AddUserToProject", "Projects", new {projectId = @Model.ProjectId})',
            function() {
                $("#modal").modal("show");
            });


    };
    function RemoveUser(source) {
        var table = $("#UserAccessTable").DataTable();
        var id = source.getAttribute('data-user-id');
        var button = $(this);
        bootbox.confirm("Are you sure you want to remove the selected user?",
            function(result) {
                if (result) {
                    $.ajax({

                        url: '/api/access?userId='+id+'&projectId=+@Model.ProjectId+',

                        method: 'DELETE',

                        success: function (data) {

                            table.row(button.parents("tr").remove()).draw();
                            window.location.reload(true);

                        }});
                }
            });
    }
</script>


