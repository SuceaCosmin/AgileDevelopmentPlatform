@using AgileDevelopmentPlatform.Models
@model List<ProjectModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project List</h2>

<button class="button btn-link">@Html.ActionLink("Create new project", "NewProject", "Projects")</button>

@if (@Model.Count > 0)
{
    <table id="projects" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Project</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProjectModel project in Model)
            {
                <tr>
                    <td>@Html.ActionLink(project.Name, "ViewProject", "Projects", new { id = project.Id }, null)</td>
                    <td>
                        @if(@project.OwnerLogged){
                            <button class="btn btn-success glyphicon glyphicon-pencil">@Html.ActionLink("Edit", "EditProject", "Projects", new {id= project.Id},null)</button>
                            <button data-project-id="@project.Id" class="btn btn-danger glyphicon glyphicon-trash js-delete"></button>
                        }                
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <p>No projects have  been created yet.</p>
}

@section scripts{
    <script>
        $(document).ready(function() {
            var table = $("#projects").DataTable();

            $("#projects").on("click",
                ".js-delete",
                function() {

                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete the selected project?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/projects/" + button.attr("data-project-id"),
                                    method: "DELETE",
                                    success: function() {
                                        table.row(button.parents("tr").remove()).draw();
                                        window.location.reload(true);

                                    }

                                });
                            }
                        });


                });
        });

    </script>
}

