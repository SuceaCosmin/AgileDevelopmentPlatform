@model AgileDevelopmentPlatform.ViewModel.ProjectUserAccessViewModel

@using (Html.BeginForm("GrantUserAccessToProject","Projects"))
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header">
            <a href="#" class="close" data-dismiss="modal">&times;</a>
            <h3>Add user to project</h3>
        </div>
        <div class="modal-body">
            <div class="form-group">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.UserId, new SelectList(Model.UserList, "Id", "UserName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                </div>
            </div>


            @Html.HiddenFor(m => m.ProjectId)
            @Html.HiddenFor(m => m.Id)

        </div>
        <div class="modal-footer">
            <button class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button id="#btnSubmit" class="btn btn-success">Submit</button>
        </div>
    </div>
}

